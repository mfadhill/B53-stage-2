generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id      Int @id @default(autoincrement())
  email   String @unique
  password String
  full_name String
  // image String
  wallet  Wallet[]
  transaction Transaction[]
  created_at DateTime
}

model Wallet{
    id      Int @id @default(autoincrement())
    inflow  BigInt
    outflow BigInt
    balance BigInt
    wallet User @relation(fields: [wallet_id], references: [id])
    wallet_id Int
    created_at DateTime
}

model Transaction{
  id      Int @id @default(autoincrement())
  amount  Int
  date DateTime
  category  String
  note   String
  img   String
  transaction User @relation(fields: [transaction_id], references: [id])
  transaction_id  Int
  created_at DateTime
}
